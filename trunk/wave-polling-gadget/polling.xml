  <script type="text/javascript">
	var TITLE="title";
	
    function renderInfo(){
  
       try{
         if (!wave.getState()) {
           return;
         }
         var state=wave.getState();
         if(!state.get(TITLE)) {
           text(TITLE,"Not set yet");
         }
         else {
           text(TITLE,wave.get(TITLE));
         } 
   
       }catch(e){
       	   alert(e);
       }
       gadgets.window.adjustHeight();
    }
    
    
